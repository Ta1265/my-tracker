// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}
// generator client {
//   provider = "prisma-client-js"
// }

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TokenInfo {
  token_id Int    @id
  symbol   String @db.VarChar(40)
  slug     String @db.VarChar(40)
  name     String @db.VarChar(40)
  rank     Int    @db.Int
  Transaction Transaction[]
  TokenPriceHistory TokenPriceHistory[]
}
model Transaction {
  id       Int      @id @default(autoincrement())
  userId   Int      @default(1) @db.Int
  coinName String   @db.VarChar(255)
  product  String   @db.VarChar(255)
  date     DateTime @default(now())
  side     String   @db.VarChar(255)
  size     Float    @db.Float
  unit     String   @db.VarChar(255)
  price    Float    @db.Float
  fee      Float    @db.Float
  total    Float    @db.Float
  notes    String   @db.VarChar(255)
  user     User     @relation(fields: [userId], references: [id])
  token_info_id Int 
  TokenInfo     TokenInfo @relation(fields: [token_info_id], references: [token_id])
}

model ExchangeRate {
  id   Int      @id @default(autoincrement())
  date DateTime @default(now())
  unit String   @unique @db.VarChar(255)
  rate Float    @db.Float
}

model User {
  id          Int           @id @default(autoincrement())
  name        String?
  email       String        @unique
  password    String
  username    String        @unique
  image       String?
  OauthTokens OuathToken[]
  Transaction Transaction[]
  NetCashFlow NetCashFlow[]
}

model OuathToken {
  id                   String   @id @default(cuid())
  userId               Int
  accessToken          String   @unique
  accessTokenExpiresOn DateTime
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NetCashFlow {
  date             DateTime @db.Date @id
  userId           Int      @db.Int
  netContributions Float    @db.Float
  netCash  Float    @db.Float
  user             User     @relation(fields: [userId], references: [id])
  totalCostBasis  Float    @db.Float
  valueOfHoldings  Float    @db.Float
  profitLoss       Float    @db.Float
  roi              Float    @db.Float
  ror              Float    @db.Float
}

model TokenPriceHistory {
  close_price Float    @db.Float
  date       DateTime  @db.Date
  token_info_id Int  @db.Int
  TokenInfo     TokenInfo @relation(fields: [token_info_id], references: [token_id])
  timeFrame  String   @db.VarChar(245)

  @@unique([date, token_info_id])
}
